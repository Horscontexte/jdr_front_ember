<div class="modelCarte layout-rox layout-align-center">
  <div class="fondDocument flex layout-center">
    {{#paper-card as |card|}}
      <div class="img-document"><img class="card-media" src={{this.model.imgurl}} alt="img for document"></div>
      {{#card.title as |title|}}
          {{#text.headline}}{{document.title}}{{/text.headline}}
      {{/card.title}}
      <div class="bg-white">
        {{#card.content}}
          <h3>{{this.model.title}}</h3>
          <p>id : {{this.model.id}}</p>
          <p>{{this.model.found}}</p>
          <p>{{this.model.description}}</p>
          {{#card.actions}}
            {{#link-to "document.index"}}
              <div class="btn-retour">
                {{#paper-button}}
                  <p>Retour</p>
                {{/paper-button}}
              </div>
            {{/link-to}}
          {{/card.actions}}
        {{/card.content}}
      </div>
    {{/paper-card}}
  </div>
</div>

{{#paper-card as |card|}}
  <div class="card">
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        <div class="modelTitle"> {{#text.headline}}
            <h3>{{this.model.title}}</h3>
          {{/text.headline}}</div>
        <div class="modelDescription">
          {{#text.subhead}}
            <p>id : {{this.model.id}}</p>
            <p>{{this.model.description}}</p>
            <p>Age: {{this.model.age}}</p>
            <p>Job: {{this.model.job}}</p>
          {{/text.subhead}}
        </div>
      {{/title.text}}
      <div class="modelAvatar">
        {{#title.media size="md"}}
          <img class="card-media" src={{this.model.imgurl}} />
        {{/title.media}}
      </div>
    {{/card.title}}
    {{#card.actions}}
      <div class="btn-retour"> {{#paper-button}}{{#link-to "personnage.index"}}
            <p>Retour</p>
          {{/link-to}}{{/paper-button}}</div>
    {{/card.actions}}
  </div>
{{/paper-card}}

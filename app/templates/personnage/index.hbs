{{#paper-list}}
  <div class="list">
    <p class="titreList">{{#paper-subheader}}Agenda / Personnages (pnj){{/paper-subheader}}</p>
    {{#each model as |item|}}
      <div class="listCadre">
        {{#paper-item class="md-3-line" onClick=(action "transitionToPersonnage" item)}}
        {{#if item.imgurl}}<img src={{item.imgurl}} alt={{item.title}} class="md-avatar"> {{else}} <img class="avatar-empty md-avatar" src="/img/avatar.png" alt="image avatar vide" >{{/if}}
          <div class="linkText">
            {{#link-to "personnage.show" item class=item.id}}
              <div class="md-list-item-text">
                <h3 class="fontTitre">{{item.title}}</h3>
                <p>{{item.job}}</p>
              </div>
            {{/link-to}}
          </div>
        {{/paper-item}}
      </div>
    {{/each}}
  </div>
{{/paper-list}}

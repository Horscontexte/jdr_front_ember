{{#paper-card as |card|}}
  <div class="card">
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        <div class="modelTitleTeam">
          {{#text.headline}}
            <h3>{{this.model.name}}</h3>
          {{/text.headline}}
        </div>
        <div class="modelDescription bg-white">
          {{#text.subhead}}
            <p>id : {{this.model.id}}</p>
            <p>Age : {{this.model.age}}</p>
            <p>MÃ©tier : {{this.model.job}}</p>
            <p>{{this.model.description}}</p>
          {{/text.subhead}}
        </div>
      {{/title.text}}
      <div class="modelAvatar">
        {{#title.media size="md"}}
          <img class="card-media" src={{this.model.imgurl}} alt="img for joueur">
        {{/title.media}}
      </div>
    {{/card.title}}
    {{#card.actions}}
      {{#link-to "joueur.index"}}
        <div class="btn-retour">
          {{#paper-button}}
            <p>Retour</p>
          {{/paper-button}}
        </div>
      {{/link-to}}
    {{/card.actions}}
  </div>
{{/paper-card}}

{{#paper-list}}
  <div class="list">
    <p class="titreList">{{#paper-subheader}}Team / Joueur{{/paper-subheader}}</p>
    {{#each model as |item|}}
      <div class="listCadre">
        {{#paper-item class="md-3-line"}}
          <img src={{item.imgurl}} alt={{item.name}} class="md-avatar">
          <div class="linkText">
            {{#link-to "joueur.show" item class=item.id}}
              <div class="md-list-item-text">
                <h3>{{item.name}}</h3>
                <p>{{item.job}}</p>
                <p>{{item.nation}}</p>
              </div>
            {{/link-to}}
          </div>
        {{/paper-item}}
      </div>
    {{/each}}
  </div>
{{/paper-list}}
